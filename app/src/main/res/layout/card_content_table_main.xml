<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40">

        <TextView
            android:id="@+id/publish_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="открытый аукцион" />

        <TextView
            android:id="@+id/current_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/publish_type"
            android:text="подача заявок" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/current_status"
            android:text="10 000" />

        <TextView
            android:id="@+id/currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@+id/price"
            android:text="российский рубль" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="40">

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="№12345678" />

        <TextView
            android:id="@+id/publisher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_below="@+id/number"
            android:text="Заказчик: ПАО Сбербанк" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_below="@+id/publisher"
            android:text="Оказание услуг в сфере связи" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_rl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <TextView
            android:id="@+id/publish_date"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="01.01.2017" />

        <TextView
            android:id="@+id/update_date"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/publish_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:text="01.01.2017" />

        <ImageView
            android:id="@+id/favorite_sign"
            android:visibility="gone"
            android:layout_below="@id/update_date"
            android:layout_alignParentRight="true"
            android:src="@drawable/favorites_orange"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </RelativeLayout>

</LinearLayout>